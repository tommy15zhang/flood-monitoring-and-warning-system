from floodsystem.stationdata import build_station_list
from floodsystem.geo import station_by_distance
from floodsystem.geo import station_within_radius
from floodsystem.geo import rivers_with_station
from floodsystem.geo import stations_by_river
from floodsystem.geo import rivers_with_station
from floodsystem.geo import stations_by_river
from floodsystem.geo import rivers_by_station_number
from floodsystem.station import inconsistent_typical_range_stations


def test_station_by_distance():
    
    p = (52.2053, 0.1218)    
    
    station_by_distance(build_station_list(), p)
    
def test_station_within_radius(): 
    
    r = 10
    
    centre = (52.2053, 0.1218)
    
    assert type(station_within_radius(build_station_list(), centre, r)) == list

def test_rivers_with_station():

    assert type(rivers_with_station(build_station_list())) == set
    

def test_stations_by_river():
    
    station_river = stations_by_river(build_station_list())
    

def test_rivers_by_station_number():
    x = rivers_by_station_number(build_station_list(), 9)
    assert type(x) == list
    

def test_inconsistent_typical_range_stations():
    inconsistent_typical_range_stations(build_station_list())
    

test_inconsistent_typical_range_stations()